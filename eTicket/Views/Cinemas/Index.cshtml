@model IEnumerable<Cinema>


@{
    ViewData["Title"] = "list of Cinemas";
}

<div class="container">
    <div class="col-md-10 offset-md-1">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model=>model.Logo)</th>
                    <th>@Html.DisplayNameFor(model=>model.Name)</th>
                    <th>@Html.DisplayNameFor(model=>model.Description)</th>
                    <th>Actions</th>
                </tr>

            </thead>
            <tbody>
                @foreach (var item in Model ?? new List<Cinema>())
                {
                    <tr>
                        <td class="align-middle">
                            <img src="@item.Logo" alt="@item.Name" class="rounded-circle " style="max-width:150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(itemmodel=>item.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(itemmodel=>item.Description)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"> <i class="bi bi-pencil-square"></i> Edit</a> |
                            <a class="btn btn-outline-info"> <i class="bi bi-eye"></i> Details</a> |
                            <a class="btn btn-danger"> <i class="bi bi-trash"></i> Delete</a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>